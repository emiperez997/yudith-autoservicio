---
import { MoveRight } from "lucide-react";
import Button from "./Button.astro";

import logo from "../assets/img/logo_white.png";
import backround from "../assets/img/almacen_fondo.jpg";
import Image from "astro/components/Image.astro";
---

<section
  id="hero"
  class="relative w-full bg-[url('../assets/img/almacen_fondo.jpg')] bg-cover bg-center h-[700px] md:h-[650px]"
>
  <div class="absolute inset-0 bg-black/50 z-0"></div>

  <div
    class="relative z-10 flex flex-col justify-between text-center py-6 mx-auto px-4 sm:px-6 lg:px-8 gap-12"
  >
    <div class="flex flex-col gap-4 justify-center items-center mt-20">
      <div class="uppercase flex flex-col md:flex-row items-center">
        <Image
          src={logo}
          alt="Company Logo"
          class="w-60 h-auto"
          loading="eager"
        />
        <h2 class="text-center text-white text-4xl lg:text-6xl font-bold">
          Autoservicio <br /> Mayorista
        </h2>
      </div>
      <p class="text-lg md:text-xl mb-8 max-w-4xl text-white">
        Podrás encontrar precios económicos, variedad de productos y promociones
        acorde a tu necesidad. Trabajando desde el 2004.
      </p>

      <div class="flex space-x-4">
        <Button variation="solid" color="black"> Ver Productos </Button>
        <Button variation="solid" color="primary"> Contactar </Button>
      </div>
    </div>
  </div>
</section>
